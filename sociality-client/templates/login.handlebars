            <p class="alert-danger" hidden>Login failed</p>
            <div class="form-group">
                <label for="username" class="sr-only">Email address</label>
                <input type="text" id="username" class="form-control" placeholder="Email address" required autofocus>
                <div class="help-block with-errors"></div>
            </div>
            <div class="form-group">
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" class="form-control" placeholder="Password" required>
                <div class="help-block with-errors"></div>
            </div>
            <button id="btn-login" class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
