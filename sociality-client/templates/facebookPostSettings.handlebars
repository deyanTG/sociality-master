<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Facebook Settings</h3>
    </div>
    <div class="panel-body">

        {{#unless connected}}
            <div class="alert alert-warning">
                Facebook not connected to account!
            </div>
        {{else}}
            <h3>Allow Sharing</h3>
            <div class="checkbox checkbox-slider-md checkbox-slider--b  checkbox-slider-primary">
                <label>
                    <input id="facebookOn" type="checkbox"><span></span>
                </label>
            </div>


        {{/unless}}

    </div>
</div>
