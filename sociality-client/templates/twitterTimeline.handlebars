<div id="timeline">
    <div class="row">
        <div class="panel panel-default widget">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Twitter Timeline</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    {{#each this }}
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-xs-2 col-md-1">
                                    <img src="{{profilePicture}}" class="img-circle img-responsive" alt=""/></div>
                                <div class="col-xs-10 col-md-11">
                                    <div>
                                        <a href="{{link}}">
                                            {{title}}</a>
                                        <div class="mic-info">
                                            By: <a href="{{profileSourceUrl}}">{{creatorName}}</a> on {{date creationTime}}
                                        </div>
                                    </div>
                                    <div class="comment-text">
                                        {{parseTwitterText text}}
                                    </div>
                                    {{postPictureHelper postPicture}}
                                    <div class="pull-right">
                                        <span class="{{classSocialIcon socialEntityType}}"></span>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {{else}}
                        <div class="alert alert-info">
                            No actions registered!
                        </div>
                    {{/each}}
                    <div id="moreContentContainer"></div>
                </ul>
                {{#if this}}
                    <button id="btn-load-more" href="#" class="btn btn-primary btn-sm btn-block" role="button"><span
                            class="glyphicon glyphicon-refresh"></span> More
                    </button>
                {{/if}}
            </div>
        </div>
    </div>
</div>